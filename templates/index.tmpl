    <!-- jQuery Modal -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css"
    />
    <script type="text/javascript">
      $(function () {
        $("#help").popover({
          trigger: "focus",
        });
      });
      $(function () {
        $("#help2").popover({
          trigger: "focus",
        });
      });
      // disable onPaste
      function disablePaste(e) {
        return false;
      }
      // validate data
      function controlFormData(e) {
        e.preventDefault();
        var Namere = /[A-Za-z]{1}[A-Za-z]/;
        if (!Namere.test($("#name-input").val())) {
          //alert("Name can not less than 2 char");
          $("#errorMessage>p").html("Le nom ne peut avoir moins de 2 caractères!");
          $("#errorMessage").modal("show");
          return;
        }
        if ($("#email-input").val() == "") {
          $("#errorMessage>p").html("Veuillez entrer une adresse email valide!");
          $("#errorMessage").modal("show");
          return;
        }
        var reeamil = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,6})?$/;
        if (!reeamil.test($("#email-input").val())) {
          $("#errorMessage>p").html("Veuillez entrer une adresse email valide!");
          $("#errorMessage").modal("show");
          return;
        }

        $("#confirmationModal").modal("show");
      }

      function submitToAPI(e) {
        e.preventDefault();
        var URL = "${url}";

        if ($("#name-input").val() != $("#confirmationName").val()) {
          $("#feedbackName").html("Votre nom ne correspond pas!");
          $("#feedbackName").css("display", "block");
          return;
        }
        if ($("#email-input").val() != $("#confirmationEmail").val()) {
          $("#feedbackEmail").html("Votre adresse mail ne correspond pas!");
          $("#feedbackEmail").css("display", "block");
          return;
        }

        var name = $("#name-input").val();
        var email = $("#email-input").val();
        var data = {
          name: name,
          email: email,
        };

        $.ajax({
          type: "POST",
          url: URL,
          dataType: "json",
          crossDomain: "true",
          contentType: "application/json; charset=utf-8",
          data: JSON.stringify(data),

          success: function () {
            // clear form and show a success message
            $("#errorMessage>p").html(
              "Consultez votre email. Un lien de confirmation vous a été envoyé."
            );
            $("#errorMessage").css("background", "#0f7555");
            $("#errorMessage").modal("show");
            document.getElementById("contact-form").reset();
            //location.reload();
          },
          error: function () {
            // show an error message
            $("#errorMessage>p").html(
              "Nous n'avons malhreusement pas pu vous enregistrer. Veuillez contacter l'<a href=\"https://gitreports.com/issue/fabiolatagne97/mtchoun-mouh\">administrateur </a>. "
            );
            $("#errorMessage").modal("show");
            location.reload();
          },
        });
      }
    </script>
